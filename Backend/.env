# ─── Database (MySQL) ────────────────────────────────────────────────────────
DB_HOST=localhost
DB_USER=root
DB_PASS=          # kalau ada password, isi di sini
DB_NAME=movieapp
PORT=5000

# ─── JWT (Auth) ──────────────────────────────────────────────────────────────
JWT_SECRET=your_super_secret_key

# ─── Front-end (Vite) ───────────────────────────────────────────────────────
VITE_API_URL=http://localhost:5000

# ─── Client URL untuk link verifikasi ───────────────────────────────────────
CLIENT_URL=http://localhost:5173

# ─── Nodemailer / SMTP settings ─────────────────────────────────────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=@gmail.com         # ganti dengan email kamu
EMAIL_PASS=   # App Password atau SMTP password
EMAIL_FROM="MovieApp" <no-reply@yourdomain.com>
